<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="project" extends="rap-default" namespace="/project">

		<action name="removeProject" class="com.taobao.rigel.rap.project.web.action.ProjectAction" method="removeProject">
              <result name="success" type="velocity">/project/myProjectList.vm</result>
        </action>
       
        <action name="myProjectList" class="com.taobao.rigel.rap.project.web.action.ProjectAction" method="myProjectList">
              <result name="success" type="velocity">/project/myProjectList.vm</result>
        </action>
        
        <action name="myProject" class="com.taobao.rigel.rap.project.web.action.ProjectAction" method="myProject">
        	  <result name="success" type="velocity">/project/myProject.vm</result>
        </action>
               
        <action name="projectDetailAjax" class="com.taobao.rigel.rap.project.web.action.ProjectAction" method="projectDetailAjax">
        	<result name="success" type="velocity">/bcom/project.cb.vm</result>
        </action>
        
        <action name="addOrUpdateProject" class="com.taobao.rigel.rap.project.web.action.ProjectAction" method="addOrUpdateProject">
        	<result name="success" type="velocity">/project/myProjectList.vm</result>
        </action>
        
        <action name="autoGenerate" class="com.taobao.rigel.rap.project.web.action.ProjectAction" method="autoGenerate">
        	<result name="success" type="stream">
        		<param name="contentType">text/plain</param>
        		<param name="contentDisposition">attachment; filename="${generatedFileName}"</param>
        		<param name="inputName">outputStream</param>
			</result>
        </action>
	</package>

</struts>

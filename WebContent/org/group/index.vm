<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
#parse('/tcom/template.rap.vm')
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>欢迎使用RAP        </title>
		#includeNewRapStatic
		<link rel="stylesheet" href="./group/index.css" type="text/css" media="screen">
	</head>
	<body>
	    #bodyNewStart
	    <div class="page">
		    <div class="groups-con content">
		    	<h2>测试产品线1</h2>
		    	<div>
		    		<span class="btn btn-primary create-group"><i class="glyphicon glyphicon-plus"></i> 创建分组</span>
		    	</div>
		    	<div class="groups">
		    	</div>
		    </div>
	    </div>
	   
<script type="text/tmpl" id="group-tmpl">
{{#groups}}
<div class="group">
    <h3>
        <span class="group-name">{{name}}</span>
        <span class="modify-con">
            <input type="text" name="name" class="form-control modify-name" value="" />
            <span class="btn btn-success save-update-group" data-id="{{groupId}}">保存</span> <span class="btn btn-default cancel-edit">取消</span> 
        </span>
        <span class="btn btn-hover btn-default update-group" data-id="{{groupId}}"><i class="glyphicon glyphicon-edit"></i> 修改名称</span> 
        <span class="btn btn-hover btn-default delete-group" data-id="{{groupId}}"><i class="glyphicon glyphicon-trash"></i> 删除这个分组</span>
    </h3>
    <div class="box-con clearfix">
		{{#projects}}
        <div class="box" data-projid="{{id}}">
            <div class="info">
                <div class="title">{{name}}</div>
                <div class="intro">{{desc}}</div>
            </div>
            <div class="status">{{status}}</div>
			{{#important}}
				<div class="star"><i class="glyphicon glyphicon-star"></i></div>
			{{/important}}
        </div>
		{{/projects}}
        <div class="box-to-add">
        </div>
    </div>
</div>
{{/groups}}
</script>

<script type="text/tmpl" id="create-proj-success-tmpl">
<div class="box" data-projid="{{id}}">
            <div class="info">
                <div class="title">{{name}}</div>
                <div class="intro">{{desc}}</div>
            </div>
            <div class="status">{{status}}</div>
        </div>
</script>

	    <script type="text/tmpl" id="create-group-tmpl">
<div class="form-horizontal" role="form">
  <div class="form-group" style="margin-bottom:0">
    <label for="inputPassword3" class="col-sm-2 control-label">分组名称 <span style="color:red">&#42;</span></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" style="width:432px;" placeholder="请在此添加分组名称" value=""/>
    </div>
  </div>
</div>
		</script>
	    <script type="text/tmpl" id="create-proj-tmpl">
<div class="form-horizontal" role="form">
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">项目名称 <span style="color:red">&#42;</span></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" style="width:432px;" placeholder="请在此编辑项目名称" value=""/>
    </div>
  </div>
 <div class="form-group" style="margin-bottom:0">
    <label for="inputPassword3" class="col-sm-2 control-label">项目描述 <span style="color:red">&#42;</span></label>
    <div class="col-sm-10">
      <textarea class="form-control" style="width:432px;resize:vertical;" placeholder="请在此编辑项目描述"></textarea>
    </div>
  </div>
</div>
		</script>
	    <script src="./group/index.js"></script>
	    #bodyEnd
	</body>
</html>
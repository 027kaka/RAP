<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
#parse('/tcom/template.rap.vm')
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>Welcome to RAP        </title>
		<link rel="shortcut icon" href="${staticRoot}/img/favicon.ico">
		#includeNewRapStatic
		<link rel="stylesheet" href="./group/index.css?_r=$!timeStamp" type="text/css" media="screen">
	</head>
	<body>
	    #bodyNewStart
	    <div class="page">
		    <div class="groups-con content">
		    	<h2>$!utils.escapeInH($productLine.name)</h2>
		    	<div>
		    		<span class="btn btn-primary create-group"><i class="glyphicon glyphicon-plus"></i> Create group</span>
		    	</div>
		    	<div class="groups">
		    		<div class="loading">Loading...</div>
		    	</div>
		    </div>
	    </div>
	   
<script type="text/tmpl" id="group-tmpl">
{{#groups}}
<div class="group">
    <h3>
        <span class="group-name">{{name}}</span>
        <span class="modify-con">
            <input type="text" name="name" class="form-control modify-name" value="" />
            <span class="btn btn-success save-update-group" data-id="{{id}}">Save</span> <span class="btn btn-default cancel-edit">Cancel</span> 
        </span>
        <span class="btn btn-hover btn-default update-group" data-id="{{id}}"><i class="glyphicon glyphicon-edit"></i> Alter name</span> 
        <span class="btn btn-hover btn-default delete-group" data-id="{{id}}"><i class="glyphicon glyphicon-trash"></i> Delete this group</span>
    </h3>
    <div class="box-con clearfix">
		{{#projects}}
        <div class="box" data-projid="{{id}}">
            <div class="info">
                <div class="title">{{name}}</div>
                <div class="intro">{{desc}}</div>
            </div>
            <div class="status">{{status}}<span class="creator">@{{creator.name}}</span></div>
			{{#important}}
				<div class="star"><i class="glyphicon glyphicon-star"></i></div>
			{{/important}}
			<div class="tools">
				{{#isManagable}}<i class="glyphicon glyphicon-pencil" data-id="{{id}}"></i>{{/isManagable}}
				<i class="glyphicon glyphicon-export" data-id="{{id}}" title="Copy RAP plugin address"></i>
				<i class="glyphicon glyphicon-eye-open" data-id="{{id}}"></i>
				{{#isManagable}}<i class="glyphicon glyphicon-trash" data-id="{{id}}"></i>{{/isManagable}}
			</div>
			<input type="hidden" class="accounts-hidden" value="{{accounts}}"/>
        </div>
		{{/projects}}
        <div class="box-to-add" data-groupid="{{id}}">
        </div>
    </div>
</div>
{{/groups}}
</script>

<script type="text/tmpl" id="create-proj-success-tmpl">
<div class="box" data-projid="{{id}}">
            <div class="info">
                <div class="title">{{name}}</div>
                <div class="intro">{{desc}}</div>
            </div>
            <div class="status">{{status}}<span class="creator">@{{creator.name}}</span></div>
			<div class="tools">
				<i class="glyphicon glyphicon-pencil" data-id="{{id}}"></i>
				<i class="glyphicon glyphicon-export" data-id="{{id}}" title="Copy RAP plugin addresses."></i>
				<i class="glyphicon glyphicon-eye-open" data-id="{{id}}"></i>
				<i class="glyphicon glyphicon-trash" data-id="{{id}}"></i>
			</div>
			<input type="hidden" class="accounts-hidden" value="{{accounts}}"/>
        </div>
</script>

	    <script type="text/tmpl" id="create-group-tmpl">
<div class="form-horizontal" role="form">
  <div class="form-group" style="margin-bottom:0">
    <label for="inputPassword3" class="col-sm-2 control-label">Group Name <span style="color:red">&#42;</span></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" style="width:432px;" placeholder="Please add group name here" value=""/>
    </div>
  </div>
</div>
		</script>
	    <script type="text/tmpl" id="create-proj-tmpl">
<div class="form-horizontal" role="form">
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Project name <span style="color:red">&#42;</span></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" style="width:432px;" placeholder="Please edit project name here." value="{{name}}"/>
    </div>
  </div>
 <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Project description</label>
    <div class="col-sm-10">
      <textarea class="form-control desc" style="width:432px;resize:vertical;" placeholder="Please edit project description here.">{{desc}}</textarea>
    </div>
  </div>
<div class="form-group" style="margin-bottom:0">
    <label for="inputPassword3" class="col-sm-2 control-label">Project Member</label>
    <div class="col-sm-10 picking-user" style="position:relative">
	  {{#users}}
	  <span class="picked-user" data-name="{{name}}" data-account="{{account}}" title="{{account}} ({{name}})">{{account}} ({{name}})<i class="unpick-btn">&times;</i></span>
	  {{/users}}
	  <input class="form-control accounts-inputer" placeholder="Add project members"/>
      <span class="user-loading">Loading...</span>
      <div class="accounts-con"></div>
	</div>
  </div>
</div>
		</script>
<script type="text/tmpl" id="user-auto-list">
	<ul class="autocompleter">
		{{#users}}
			<li data-account="{{account}}" data-name="{{name}}" {{^block}}title="{{account}} ({{name}})"{{/block}}{{#block}} data-block="true"{{/block}}>
				{{#block}}No more matched data{{/block}}
				{{^block}}{{account}} ({{name}}){{/block}}
			</li>
		{{/users}}
	</ul>
</script>
<script type="text/tmpl" id="user-item-tmpl">
<span class="picked-user" data-name="{{name}}" data-account="{{account}}" title="{{account}} ({{name}})">{{account}} ({{name}})<i class="unpick-btn">&times;</i></span>
</script>
	    <script src="./group/index.js?_r=$!timeStamp"></script>
	    #bodyEnd
	</body>
</html>

<!DOCTYPE html>
#parse('/tcom/template.rap.vm')
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
		<title>Welcome to RAP        </title>
		<link rel="shortcut icon" href="${staticRoot}/img/favicon.ico">
		#includeNewRapStatic
		<link rel="stylesheet" href="./group/index.css?_r=$!timeStamp" type="text/css" media="screen">
	</head>
	<body>
	    #bodyNewStart
        <div id="browserCheckAlert" class="alert alert-warning alert-dismissible" role="alert" style="display:none;">
            <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <strong>Warning!</strong> We strongly recommend you to use IE9+/Chrome/Firefox, for others, we do not ensure the campability. 
        </div>
	    <div class="page home">
		    <div class="groups-con content">
		    	<h2>Dashboard</h2>
                    <div class="groups">
		    		<div class="loading">Loading, please wait...</div>
		    	</div>
		    </div>
	    </div>
<script type="text/tmpl" id="group-tmpl">
{{#groups}}
<div class="group">
    <h3>
        <span class="group-name"><i class="glyphicon glyphicon-{{type}}"></i> {{name}}</span>
    </h3>
    <div class="box-con clearfix">
		{{#projects}}
        <div class="box" data-projid="{{id}}">
            <div class="info">
                <div class="title">{{name}}</div>
                <div class="intro">{{desc}}</div>
            </div>
            <div class="status">{{status}}<span class="creator">@{{creator.name}}</span></div>
			{{#important}}
				<div class="star"><i class="glyphicon glyphicon-star"></i></div>
			{{/important}}
			<div class="tools">
				{{#isManagable}}<i class="glyphicon glyphicon-pencil" data-id="{{id}}"></i>{{/isManagable}}
				<i class="glyphicon glyphicon-export" data-id="{{id}}" title="Copy RAP plugin address"></i>
				<i class="glyphicon glyphicon-eye-open" data-id="{{id}}"></i>
				{{#isManagable}}<i class="glyphicon glyphicon-trash" data-id="{{id}}"></i>{{/isManagable}}
			</div>
			<input type="hidden" class="accounts-hidden" value="{{accounts}}"/>
        </div>
		{{/projects}}
		<div class="box-to-add">
        </div>
    </div>
</div>
{{/groups}}
</script>


<script type="text/tmpl" id="create-proj-success-tmpl">
<div class="box" data-projid="{{id}}">
            <div class="info">
                <div class="title">{{name}}</div>
                <div class="intro">{{desc}}</div>
            </div>
            <div class="status">{{status}}<span class="creator">@{{creator.name}}</span></div>
			<div class="tools">
				<i class="glyphicon glyphicon-pencil" data-id="{{id}}"></i>
				<i class="glyphicon glyphicon-export" data-id="{{id}}" title="Copy RAP plugin address"></i>
				<i class="glyphicon glyphicon-eye-open" data-id="{{id}}"></i>
				<i class="glyphicon glyphicon-trash" data-id="{{id}}"></i>
			</div>
			<input type="hidden" class="accounts-hidden" value="{{accounts}}"/>
        </div>
</script>


<script type="text/tmpl" id="update-proj-tmpl">
<div class="form-horizontal" role="form">
  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Project Name <span style="color:red">&#42;</span></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" style="width:432px;" placeholder="Edit project name here" value="{{{name}}}"/>
    </div>
  </div>
 <div class="form-group">
    <label for="" class="col-sm-2 control-label">Project Descriptions</label>
    <div class="col-sm-10">
      <textarea class="form-control desc" style="width:432px;resize:vertical;" placeholder="Edit project description here">{{{desc}}}</textarea>
    </div>
  </div>
<div class="form-group">
    <label for="" class="col-sm-2 control-label">Project Member</label>
    <div class="col-sm-10 picking-user" style="position:relative">
	  {{#users}}
	  <span class="picked-user" data-name="{{name}}" data-account="{{account}}" title="{{account}} ({{name}})">{{account}} ({{name}})<i class="unpick-btn">&times;</i></span>
	  {{/users}}
	  <input class="form-control accounts-inputer" placeholder="Add project member"/>
	  <span class="user-loading">Loading project members...</span>
      <div class="accounts-con"></div>
	</div>
  </div>
</div>
</script>

<script type="text/tmpl" id="create-proj-tmpl">
<div class="form-horizontal" role="form">
  <div class="form-group">
    <label for="" class="col-sm-2 control-label">Project Name<span style="color:red">&#42;</span></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" style="width:432px;" placeholder="Edit project name" value="{{name}}"/>
    </div>
  </div>
 <div class="form-group">
    <label for="" class="col-sm-2 control-label">Project Desc</label>
    <div class="col-sm-10">
      <textarea class="form-control desc" style="width:432px;resize:vertical;" placeholder="Edit project description">{{desc}}</textarea>
    </div>
  </div>
<div class="form-group">
    <label for="" class="col-sm-2 control-label">Project Members</label>
    <div class="col-sm-10 picking-user" style="position:relative">
	  {{#users}}
	  <span class="picked-user" data-name="{{name}}" data-account="{{account}}" title="{{account}} ({{name}})">{{account}} ({{name}})<i class="unpick-btn">&times;</i></span>
	  {{/users}}
	  <input class="form-control accounts-inputer" placeholder="Add project members"/>
      <span class="user-loading">Loading project members... </span>
      <span class="glyphicon glyphicon-question-sign tip" title="If you can not find the user, he/she may not register yet.">Can not find?</span>
      <div class="accounts-con"></div>
	</div>
  </div>
  <div class="form-group" style="margin-bottom:0">
    <label for="" class="col-sm-2 control-label">Project Organize</label>
    <div class="col-sm-10 project-target" style="position:relative">
		<div class="clearfix">
    	<select class="form-control team">
    		<option>--Choose Team--</option>
    		#foreach($corp in $corpList)
          	 <option value="$corp.id">$corp.name</option>
          	#end
    	</select>
		<span>
    		<select class="form-control productline">
    			<option value="">--Choose Product Line--</option>
    		</select>
		</span>
		<span>
    		<select class="form-control group">
    			<option value="">--Choose Group--</option>
    		</select><br>
		</span>
	</div>
    	<div class="create-new-entity-container">
		</div>
	</div>
  </div>
</div>
</script>

<script type="text/tmpl" id="create-group-tmpl">
<div class="form-horizontal" role="form">
  <div class="form-group" style="margin-bottom:0">
    <label for="inputPassword3" class="col-sm-2 control-label">Group Name <span style="color:red">&#42;</span></label>
    <div class="col-sm-10">
      <input type="text" class="form-control" style="width:432px;" placeholder="Group name" value=""/>
    </div>
  </div>
</div>
</script>

<script type="text/tmpl" id="create-productline">
<div class="form-horizontal" role="form">
  <div class="form-group" style="margin-bottom:0">
    <label for="productline-inputer" class="col-sm-2 control-label">Name <span style="color:red">&#42;</span></label>
    <div class="col-sm-10">
      <input type="text" id="productline-inputer" class="form-control" style="width:432px;" placeholder="Add production line here" value="{{value}}"/>
    </div>
  </div>
</div>
</script>

<script type="text/tmpl" id="option-list-tmpl">
{{#items}}
<option value="{{id}}">{{name}}</option>
{{/items}}
</script>

<script type="text/tmpl" id="user-auto-list">
	<ul class="autocompleter">
		{{#users}}
			<li data-account="{{account}}" data-name="{{name}}" {{^block}}title="{{account}} ({{name}})"{{/block}}{{#block}} data-block="true"{{/block}}>
				{{#block}}No matched result{{/block}}
				{{^block}}{{account}} ({{name}}){{/block}}
			</li>
		{{/users}}
	</ul>
</script>
<script type="text/tmpl" id="user-item-tmpl">
<span class="picked-user" data-name="{{name}}" data-account="{{account}}" title="{{account}} ({{name}})">{{account}} ({{name}})<i class="unpick-btn">&times;</i></span>
</script>
		</script>
	    <script src="./home/index.js?_r=$!timeStamp"></script>
	    #bodyEnd
	</body>
</html>

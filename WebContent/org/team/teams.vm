<!DOCTYPE html>
    #parse('/tcom/template.rap.vm')
<html>
<head>
    <title>欢迎使用RAP        </title>
    #includeNewRapStatic
</head>
<body>
#bodyNewStart
<table class="table table-hover">
    <thead>
        <th>团队名称</th>
        <th>人数</th>
        <th>操作</th>
    </thead>
    <tbody>
        #foreach($item in $teamList)
        <tr>
            <td>$!utils.escapeInH($item.name)</td>
            <td>-</td>
            <td></td>
        </tr>
        #end
    </tbody>
</table>
<nav>
    <ul class="pagination pagination-sm">
        <li  #if($pageNum==1)
                class="disabled" onclick="return false;"
        #end><a href="$orgUrl.teams?pageNum=1" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
        #foreach($curPageNum in [1..$teamListPageInTotal])
            #if($pageNum==$curPageNum)
                <li class="active"><a href="#">$curPageNum <span class="sr-only">(current)</span></a></li>
            #else
                <li><a href="$orgUrl.teams?pageNum=$!curPageNum">$curPageNum</a></li>
            #end

        #end
        <li #if($pageNum==$teamListPageInTotal)
                class="disabled" onclick="return false;"
            #end><a href="$orgUrl.teams?pageNum=$!teamListPageInTotal" aria-label="Next"><span aria-hidden="true">»</span></a></li>
    </ul>
</nav>
#bodyEnd
</body>
</html>